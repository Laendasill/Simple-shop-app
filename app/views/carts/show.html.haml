- if notice
  %p= notice
%h2 Your shopping cart
%table.table
  %thead
    %th Product
    %th Amount
    %th Price
    %th Action
  - Array(@cart.cart_items).each_with_index do |item|
    %tr
      %td #{item.product.title}
      %td #{item.amount}  
      %td=number_to_currency(item.total_price)
      %td
        =link_to "delete", cart_item_path(item), :method => :delete, :confirm => "are you sure?", class: "btn btn-mini btn-danger"
        
  %tr
    %td.total-line{ "colspan" => 2} Total
    %td.total-cell{ "colspan" => 2}= number_to_currency(@cart.total_price)
=button_to "Empty cart", @cart, method: :delete, class: "btn btn-danger", confirm: "are you sure?"
=link_to "back", products_path, class: "btn"
