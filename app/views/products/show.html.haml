- model_class = Product
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @product.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @product.description
%p
  %strong= model_class.human_attribute_name(:price) + ':'
  %br
  = @product.price
%p
  %strong Current category
  %br
  .dropdown
    %button.btn.btn-default.dropdown-toggle{ "type" => "button", "id" => "dropdownMenu1", "data-toggle" => "dropdown"}
     Catrgories
    %ul.dropdown-menu{ "role" => "menu", "aria-labelledby" => "dropdownMenu1" }
      -@categories.each do |c|
        %li{ "role" => "presentation" }
          %a{ "role" => "menuitem", "tabindex" => "-1", "href" => "#"}
            c.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), products_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(@product), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), product_path(@product), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
